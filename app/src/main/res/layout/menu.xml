<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#ff106299">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/reklama_menu"
        >
    </com.google.android.gms.ads.AdView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/kulki_widok_menu"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUIDE"
        android:id="@+id/tv_guide"
        android:textSize="@dimen/font22"
        android:background="@drawable/scores_obwodka_przy_napisach"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:layout_above="@+id/tv_scores"
        android:layout_marginBottom="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES"
        android:id="@+id/tv_scores"
        android:textSize="@dimen/font22"
        android:background="@drawable/scores_obwodka_przy_napisach"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:layout_above="@+id/tv_play"
        android:layout_marginBottom="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:id="@+id/tv_play"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/font22"
        android:background="@drawable/scores_obwodka_przy_napisach"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/imageView2" />
</RelativeLayout>
